{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with input/output redirection",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "preLaunchTask": "build and run",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "linux": {
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "windows": {
        "miDebuggerPath": "path/to/gdb.exe"
      }
    }
  ]
}
