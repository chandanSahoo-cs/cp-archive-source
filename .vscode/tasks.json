{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run",
      "type": "shell",
      "command": "g++",
      "args": [
        "-Dchandan",
        "-Wextra",
        "-Wall",
        "-std=c++20",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile C++ code"
    },
    {
      "label": "run with redirection",
      "type": "shell",
      "command": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": ["<", "input.txt", ">", "output.txt"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Run executable with input/output redirection"
    }
  ]
}
